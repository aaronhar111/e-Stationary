<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-16dp">

        <ImageView
            android:id="@+id/e_stationary"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/logoContentDescription"
            app:srcCompat="@drawable/e_stationary_logo"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="40dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#82EDF1"
            android:padding="20dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/imgbtnComplain"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:padding="0dp"
                app:srcCompat="@drawable/complaint_icon"
                style="@style/imgbuttonComplain"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtTalktoUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="210dp"
                android:gravity="center"
                android:text="@string/complain"
                android:textStyle="bold"
                tools:ignore="NotSibling" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C1F85D"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/imgbtnChat"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:padding="0dp"
                app:srcCompat="@drawable/chat_icon" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/txtChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="@string/talkToUs"
                android:textStyle="bold"
                android:layout_marginTop="210dp"/>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>